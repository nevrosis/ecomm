<%= simple_form_for(@item, html:{class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Name' %>
    <%= f.input :author, label: false, placeholder: 'Author' %>
    <%= f.input :description, label: false, placeholder: 'Description' %>
    <%= f.input :price, required: true, label: false, placeholder: 'Price' %>
    <%= f.input :availability %>

    <%= f.input :image %>
    <%= f.input :document %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save Item', class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>
