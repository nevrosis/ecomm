<table class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Available</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= item.availability %></td>
      <td><%= link_to 'Edit', edit_item_path(item),class: 'btn btn-info btn-xs' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
