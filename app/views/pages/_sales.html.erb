<table class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Date</th>
      <th>Buyer</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
    <tr>
      <th><%= sale.item.id %></th>
      <td><%= link_to sale.item.name, pickup_path(sale.uuid) %></td>
      <td><%= time_ago_in_words(sale.created_at) %> ago</td>
      <td><%= sale.buyer_email %></td>
    </tr>
    <% end %>
  </tbody>
</table>
