<h1>dashboard</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Items
      <%= link_to 'Add an item', new_item_path, class: 'btn btn-primary' %>
    </h2>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Available</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <th><%= item.id %></th>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= item.availability %></td>
          <td><%= link_to 'Edit', edit_item_path(item),class: 'btn btn-info btn-xs' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h2>Purchases</h2>

  </div>
  <div class="col-md-4">
    <h2>Sales</h2>

  </div>
</div>
